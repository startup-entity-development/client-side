<Register>:
    name: name_input
    user: user_input
    password: password_input
    email : email_input
    second_password : second_password_input
    BoxLayout:
        orientation: 'vertical'
        rows: 2
        size: root.size
        MDIcon:
            size_hint : (1, .18)
            halign: "center"
            icon: "graph"
            font_size: "60sp"
            theme_text_color:"Custom"
            text_color: app.theme_cls.primary_color
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'center'
            size_hint : (1, .82)
            BoxLayout:
                orientation:'vertical'
                size_hint_y: .9
                size_hint_x: .9
                size_hint_min_x: 250
                size_hint_min_y: 500
                size_hint_max_x: 525
                size_hint_max_y: 625
                spacing: 30
                MDCard:
                    radius: 5, 5, 5, 5
                    elevation: .0
                    BoxLayout:
                        orientation:'vertical'
                        padding: 10
                        spacing: 0
                        MDLabel:
                            size_hint_y:.12
                            text:'Sign up to Entity'
                            font_style:"H5"
                            halign:'center'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color
                        MDTextField:
                            id: name_input
                            size_hint_y:.22
                            write_tab: False
                            hint_text:'Your name'
                            max_text_length: 15
                            size_hint_min_y: 60
                            size_hint_max_y: 70

                        MDTextField:
                            id: user_input
                            size_hint_y:.22
                            write_tab: False
                            hint_text:'Account name'
                            max_text_length: 15
                            size_hint_min_y: 60
                            size_hint_max_y: 70
                        MDTextField:
                            id: password_input
                            size_hint_y:.22
                            write_tab: False
                            hint_text: "Password"
                            password:True
                            max_text_length: 15
                            size_hint_min_y: 60
                            size_hint_max_y: 70
                        MDTextField:
                            id: second_password_input
                            write_tab: False
                            size_hint_y:.22
                            hint_text: "Repeat password"
                            password:True
                            max_text_length: 15
                            size_hint_min_y: 60
                            size_hint_max_y: 70
                        MDTextField:
                            id: email_input
                            write_tab: False
                            hint_text: "Email"
                            size_hint_y:.22
                            size_hint_min_y: 60
                            size_hint_max_y: 70



                MDRaisedButton:
                    text: 'Up'
                    size_hint_x : 1
                    on_press: root.to_create_account()

                MDTextButton:
                    text: 'Sign in'
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    on_release:root.go_to_login()




