<itemTickets>:
    source_img : ""
    name_icon : ""
    AsyncImageLeftWidget:
        source: root.source_img
    IconRightWidget:
        icon: root.name_icon
        theme_text_color:"Custom"
        text_color: [1,.8,0,1]
        on_release: print("hello")

<CardSubscription>:
    title : title
    titleSub: titleSub
    search_box:search_box
    origen:origen
    orientation: "vertical"
    padding: "8sp"
    size_hint: 1, 1

    BoxLayout:
        orientation: "vertical"
        size_hint:1,1
        spacing: 5
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: "100sp"
            spacing: 5
            padding: 5
            canvas.before:
                Color:
                    rgb: app.theme_cls.primary_color
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius:[2,2,1,1]
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: None
                width: "50sp"
                id:origen
            MDSeparator:
                orientation: 'vertical'
                size_hint_x: None
                width:1
                color: 1,1,1,1
            BoxLayout:
                size_hint_x: 0.8
                orientation: "vertical"
                BoxLayout:
                    orientation: "vertical"
                    spacing: 5
                    MDLabel:
                        id: titleSub
                        text: 'Subscription'
                        theme_text_color: "Secondary"
                    MDLabel:
                        id: title
                        theme_text_color: "Custom"
                        text_color: 1,1,1,1
                BoxLayout:
                    orientation: "horizontal"
                    id:search_box
                    MDIcon:
                        icon: 'magnify'
                        pos_hint :{'center_y': .36}
                        size_hint_x: None
                        width: "35sp"
                        theme_text_color:'Custom'
                        text_color: .3,.3,.3,1
                    MDTextField:
                        pos_hint :{'center_y': .36}
                        id: search_field
                        color_mode: 'custom'
                        font_size: "18dp"
                        line_color_focus: 1, 1, 1, 1
                        line_color_normal: 1,1,1,.4
                        on_text: root.set_list_data(self.text, True)

            AnchorLayout:
                size_hint_x: 0.1
                anchor_x: "right"
                anchor_y: "top"
                MDIconButton:
                    icon: "cog"
                    user_font_size: "24sp"

        RelativeLayout:
            RecycleView:
                id: rv
                key_viewclass: 'viewclass'
                key_size: 'height'
                RecycleBoxLayout:
                    default_size: None, dp(90)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'

